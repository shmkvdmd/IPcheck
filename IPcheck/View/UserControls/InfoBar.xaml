<UserControl x:Class="IPcheck.View.UserControls.InfoBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:IPcheck.View.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="30">
    <Grid Background="#FFEDEDED">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="80"/>
        </Grid.ColumnDefinitions>
        <Label Name="labelInfo" FontSize="14"/>
        <Grid Grid.Column="1">
            <Button Name="refreshBtn" Content="Refresh" Margin="3" FontSize="14" Click="refreshBtn_Click">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="5"/>
                </Style>
            </Button.Resources>
            </Button>
        </Grid>
    </Grid>
</UserControl>
